<div class="container">
<h2>ユーザー情報</h2>
<hr />
    <div class="row">
        <div class="col-3">
            <h5>マイページ</h5>
            <hr />
            <p>
                <strong>ユーザー名</strong>
                <%= @user.name %>
            </p>
            <p>
                <strong>e-mail</strong>
                <%= @user.email %>
            </p>
            <% if current_user.families.first.present? %>
            <p>
            <strong>家族名</strong>
            <%= link_to current_user.families.first.name, families_path %>
            </p>
            <% else %>
            <%= link_to "ファミリーに所属する", new_family_path%><br>
            <% end %>
            <%= link_to "ユーザーを招待", new_user_invitation_path%>
        </div>
    </div>
</div>

