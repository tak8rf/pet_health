<%= form_with(model: pet) do |form| %>
  <% if pet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

      <ul>
        <% pet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :名前 %><br>
    <%= form.text_field :name %>
  </div>

  <div class="title">
    <div class="form-tag">誕生日</div>
    <%= form.date_field :birthday %>
  </div>

  <div class="field">
    <%= form.label :備考欄 %><br>
    <%= form.text_area :content %>
  </div>

  <%= form.hidden_field :family_id, :value => current_user.families.first.id %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
